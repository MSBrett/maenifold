---
import Base from '../layouts/Base.astro';

const pages = await Astro.glob('./tools/*.md');
const sortedPages = pages.sort((a, b) => {
  const nameA = a.file.split('/').pop()?.replace('.md','') || '';
  const nameB = b.file.split('/').pop()?.replace('.md','') || '';
  return nameA.localeCompare(nameB);
});
---

<Base>
  <style>
    .usage-hero {
      padding: 48px 0 32px;
      text-align: center;
      border-bottom: 1px solid rgba(255,255,255,0.06);
    }
    .usage-hero h1 {
      font-size: clamp(36px, 4vw, 52px);
      font-weight: 800;
      margin: 0 0 12px;
    }
    .usage-hero p {
      color: var(--muted);
      font-size: 18px;
      max-width: 600px;
      margin: 0 auto;
    }
    .tools-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 16px;
      padding: 32px 0 80px;
    }
    .tool-card {
      padding: 20px;
      border-radius: 12px;
      border: 1px solid rgba(255,255,255,0.06);
      background: rgba(255,255,255,0.02);
      transition: all 0.2s ease;
      display: block;
    }
    .tool-card:hover {
      background: rgba(255,255,255,0.04);
      border-color: rgba(84,174,255,0.3);
      transform: translateY(-2px);
      text-decoration: none;
    }
    .tool-name {
      font-weight: 600;
      font-size: 16px;
      color: var(--primary);
      margin-bottom: 4px;
    }
    .tool-category {
      font-size: 12px;
      color: var(--muted);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
  </style>
  <main>
    <div class="container">
      <div class="usage-hero">
        <h1>Tool Reference</h1>
        <p>Complete documentation for all maenifold MCP tools</p>
      </div>
      <div class="tools-grid">
        {sortedPages.map(p => {
          const name = p.file.split('/').pop()?.replace('.md','') || '';
          return (
            <a href={p.url} class="tool-card">
              <div class="tool-name">{name}</div>
              <div class="tool-category">Tool Documentation</div>
            </a>
          );
        })}
      </div>
    </div>
  </main>
</Base>