<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="theme-color" content="#0b1520" />
        <link
            rel="icon"
            href={`${import.meta.env.BASE_URL}assets/branding/maenifold-logo.svg`}
        />
        <style>
            :root {
                --bg: #0b1520; /* deep slate */
                --panel: #0e1b28; /* glass panel */
                --text: #e6f1ff;
                --muted: #9fb3c8;
                --primary: #54aeff; /* github dark blue */
                --purple: #c297ff;
                --green: #4ac26b;
                --red: #ff8182;
                --grid:
                    radial-gradient(
                        circle at 50% 50%,
                        rgba(84, 174, 255, 0.08),
                        transparent 35%
                    ),
                    linear-gradient(
                        rgba(255, 255, 255, 0.05) 1px,
                        transparent 1px
                    ),
                    linear-gradient(
                        90deg,
                        rgba(255, 255, 255, 0.05) 1px,
                        transparent 1px
                    );
            }
            html,
            body {
                height: 100%;
            }
            body {
                margin: 0;
                background: var(--bg);
                color: var(--text);
                background-image: var(--grid);
                background-size:
                    100% 100%,
                    60px 60px,
                    60px 60px;
                background-position:
                    center center,
                    0 0,
                    0 0;
                font-family:
                    ui-sans-serif,
                    system-ui,
                    -apple-system,
                    Segoe UI,
                    Roboto,
                    Inter,
                    Helvetica Neue,
                    Arial;
                line-height: 1.6;
            }
            a {
                color: var(--primary);
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
            .container {
                width: min(1180px, 92%);
                margin: 0 auto;
            }
            header.site {
                position: sticky;
                top: 0;
                z-index: 10;
                backdrop-filter: blur(8px);
                background: color-mix(in oklab, var(--bg) 80%, transparent);
                border-bottom: 1px solid rgba(255, 255, 255, 0.06);
            }
            .nav {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 0;
            }
            .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 600;
                letter-spacing: 1px;
            }
            .brand img {
                width: 40px;
                height: 40px;
            }
            .pill {
                padding: 8px 12px;
                border-radius: 999px;
                background: rgba(84, 174, 255, 0.12);
                border: 1px solid rgba(84, 174, 255, 0.25);
                color: var(--text);
            }
            main {
                padding: 32px 0 80px;
            }
            .content {
                display: grid;
                grid-template-columns: 1.2fr 0.8fr;
                gap: 32px;
                align-items: start;
            }
            .panel {
                background: color-mix(in oklab, var(--panel) 86%, transparent);
                border: 1px solid rgba(255, 255, 255, 0.06);
                border-radius: 16px;
                padding: 24px;
                box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
            }
            footer {
                color: var(--muted);
                font-size: 14px;
                padding: 24px 0 48px;
            }
            @media (max-width: 960px) {
                .content {
                    grid-template-columns: 1fr;
                }
            }
            /* prose */
            .prose h1,
            h2,
            h3 {
                letter-spacing: 0.3px;
            }
            .prose pre {
                background: #0a0f14;
                border-radius: 10px;
                padding: 14px;
                overflow: auto;
            }
            .prose code {
                color: #d1eaff;
            }
            .prose img {
                max-width: 100%;
                border-radius: 12px;
                border: 1px solid rgba(255, 255, 255, 0.06);
            }
            .badge {
                display: inline-flex;
                gap: 6px;
                align-items: center;
                font-size: 12px;
                padding: 6px 10px;
                border-radius: 999px;
                border: 1px solid rgba(255, 255, 255, 0.08);
                background: rgba(255, 255, 255, 0.04);
                color: var(--muted);
            }
        </style>
    </head>
    <body>
        <header class="site">
            <div class="container nav">
                <div class="brand">
                    <img
                        src={`${import.meta.env.BASE_URL}assets/branding/maenifold-icon.svg`}
                        alt="maenifold"
                    />
                    <a href={import.meta.env.BASE_URL}>maenifold</a>
                </div>
                <nav>
                    <a class="pill" href={`${import.meta.env.BASE_URL}usage/`}
                        >Usage</a
                    >
                    <a class="pill" href="https://github.com/MSBrett/maenifold"
                        >GitHub</a
                    >
                    <a
                        class="pill"
                        href="https://www.npmjs.com/package/@ma-collective/maenifold"
                        >NPM</a
                    >
                </nav>
            </div>
        </header>
        <slot />
        <footer class="container">
            <div>MIT © ma-collective · Built with Astro</div>
        </footer>
    </body>
</html>
