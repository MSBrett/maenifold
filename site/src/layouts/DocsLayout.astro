---
import Base from './Base.astro';

const pages = await Astro.glob('../pages/usage/tools/*.md');
const sortedPages = pages.sort((a, b) => {
  const nameA = a.file.split('/').pop()?.replace('.md','') || '';
  const nameB = b.file.split('/').pop()?.replace('.md','') || '';
  return nameA.localeCompare(nameB);
});

const currentPath = Astro.url.pathname;
---

<Base>
  <style>
    .docs-layout {
      display: grid;
      grid-template-columns: 250px 1fr;
      gap: 48px;
      padding: 32px 0 80px;
      max-width: 1180px;
      margin: 0 auto;
      width: 92%;
    }
    .sidebar {
      position: sticky;
      top: 80px;
      height: fit-content;
      max-height: calc(100vh - 100px);
      overflow-y: auto;
    }
    .sidebar-title {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--muted);
      margin: 0 0 16px;
      padding: 0 12px;
    }
    .nav-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .nav-item {
      margin-bottom: 2px;
    }
    .nav-link {
      display: block;
      padding: 8px 12px;
      border-radius: 8px;
      font-size: 14px;
      color: var(--text);
      transition: all 0.15s ease;
    }
    .nav-link:hover {
      background: rgba(84,174,255,0.08);
      text-decoration: none;
    }
    .nav-link.active {
      background: rgba(84,174,255,0.12);
      color: var(--primary);
      font-weight: 500;
    }
    .docs-content {
      max-width: 800px;
    }
    /* Prose styling for markdown content */
    .docs-content :global(h1) {
      font-size: clamp(32px, 4vw, 42px);
      font-weight: 700;
      margin: 0 0 24px;
      color: var(--text);
      letter-spacing: 0.3px;
    }
    .docs-content :global(h2) {
      font-size: clamp(24px, 3vw, 32px);
      font-weight: 600;
      margin: 40px 0 16px;
      color: var(--text);
      letter-spacing: 0.3px;
    }
    .docs-content :global(h3) {
      font-size: clamp(20px, 2.5vw, 24px);
      font-weight: 600;
      margin: 32px 0 12px;
      color: var(--text);
      letter-spacing: 0.3px;
    }
    .docs-content :global(h4) {
      font-size: 18px;
      font-weight: 600;
      margin: 24px 0 8px;
      color: var(--text);
    }
    .docs-content :global(p) {
      color: rgba(200, 214, 230, 0.92);
      line-height: 1.8;
      margin-bottom: 16px;
    }
    .docs-content :global(ul),
    .docs-content :global(ol) {
      color: rgba(200, 214, 230, 0.92);
      line-height: 1.8;
      margin-bottom: 16px;
      padding-left: 24px;
    }
    .docs-content :global(li) {
      margin-bottom: 8px;
    }
    .docs-content :global(code) {
      background: rgba(84, 174, 255, 0.1);
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.9em;
      color: #d1eaff;
    }
    .docs-content :global(pre) {
      background: #0a0f14;
      border-radius: 12px;
      padding: 20px;
      overflow-x: auto;
      margin: 20px 0;
      border: 1px solid rgba(255, 255, 255, 0.06);
    }
    .docs-content :global(pre code) {
      background: none;
      padding: 0;
    }
    .docs-content :global(a) {
      color: var(--primary);
      text-decoration: none;
    }
    .docs-content :global(a:hover) {
      text-decoration: underline;
    }
    .docs-content :global(blockquote) {
      border-left: 3px solid var(--primary);
      padding-left: 16px;
      margin: 20px 0;
      color: var(--muted);
      font-style: italic;
    }
    .docs-content :global(hr) {
      border: none;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      margin: 32px 0;
    }
    .docs-content :global(table) {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    .docs-content :global(th),
    .docs-content :global(td) {
      padding: 12px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      text-align: left;
    }
    .docs-content :global(th) {
      background: rgba(84, 174, 255, 0.08);
      font-weight: 600;
    }
    .docs-content :global(img) {
      max-width: 100%;
      border-radius: 12px;
      border: 1px solid rgba(255, 255, 255, 0.06);
      margin: 24px 0;
    }
    @media (max-width: 960px) {
      .docs-layout {
        grid-template-columns: 1fr;
        gap: 24px;
      }
      .sidebar {
        position: static;
        max-height: none;
        border-bottom: 1px solid rgba(255,255,255,0.06);
        padding-bottom: 24px;
      }
    }
    /* Scrollbar styling for sidebar */
    .sidebar::-webkit-scrollbar {
      width: 6px;
    }
    .sidebar::-webkit-scrollbar-track {
      background: transparent;
    }
    .sidebar::-webkit-scrollbar-thumb {
      background: rgba(255,255,255,0.1);
      border-radius: 3px;
    }
    .sidebar::-webkit-scrollbar-thumb:hover {
      background: rgba(255,255,255,0.15);
    }
  </style>
  <main>
    <div class="docs-layout">
      <aside class="sidebar">
        <div class="sidebar-title">Tools</div>
        <ul class="nav-list">
          {sortedPages.map(p => {
            const name = p.file.split('/').pop()?.replace('.md','') || '';
            const isActive = p.url && currentPath.includes(p.url);
            return (
              <li class="nav-item">
                <a href={p.url} class={`nav-link ${isActive ? 'active' : ''}`}>
                  {name}
                </a>
              </li>
            );
          })}
        </ul>
      </aside>
      <div class="docs-content prose">
        <slot />
      </div>
    </div>
  </main>
</Base>
